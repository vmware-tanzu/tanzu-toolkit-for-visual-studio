<Window x:Class="Tanzu.Toolkit.WpfViews.DeploymentDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Tanzu.Toolkit.WpfViews.Converters"
        mc:Ignorable="d"
        Name="DeploymentDialogViewElement"
        Title="Deploy to Tanzu Application Service"
        Icon="Resources/tas_16px.png"
        Width="500"
        Height="320"
        MinWidth="500"
        MinHeight="320"
        d:DesignHeight="500" d:DesignWidth="800">

    <Window.Resources>
        <converters:VisibilityConverter x:Key="Visibility" />
        <converters:VisibilityConverter x:Key="InverseVisibility" Reversed="True"/>

        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="2" BorderThickness="1" BorderBrush="Black" Background="White" Margin="2,2,2,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Width="414" VerticalAlignment="Top" Margin="8,8,8,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="App Manifest:" VerticalAlignment="Center" Margin="8,0,8,0"/>

        <Grid Grid.Row="0" Grid.Column="1" Margin="8,0,8,0" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>

            <Label 
                VerticalAlignment="Center"
                Grid.Row="0"
                Grid.Column="0"
                Content="{Binding ManifestPathLabel}" 
                ToolTip="{Binding ManifestPathLabel}"/>

            <Button 
                MaxWidth="32" MinWidth="32" Padding="0,0,0,0"
                Grid.Row="0"
                Grid.Column="1"
                Click="SelectManifest">
                <Image 
                    Width="16"
                    Source="Resources/OpenFolder.png" />
            </Button>
        </Grid>

        <TextBlock Grid.Row="1" Text="App Name:" VerticalAlignment="Center" Margin="8,0,8,0"/>

        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Margin="8,4,8,4" Height="24" Text="{Binding AppName}" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <StackPanel VerticalAlignment="Center" Grid.Row="2" Margin="8,8,8,8">
            <TextBlock VerticalAlignment="Center" Text="Deployment Target:" />
        </StackPanel>

        <Button Grid.Row="2" Grid.Column="1" ToolTip="Login to Tanzu Application Service"
                Command ="{ Binding ElementName=DeploymentDialogViewElement, Path=OpenLoginDialogCommand }" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="8,4,8,4">
            <DockPanel HorizontalAlignment="Left" Width="265" Height="23">
                <Label Content="Disconnected: Click here to login" DockPanel.Dock="Right" 
                       VerticalAlignment="Top" Width="235" FontSize="11" Height="24" Margin="0,-2,0,0"/>
                <Image Source="Resources/AddCloud.png" Stretch="Uniform" Height="16px" Width="21" 
                    Margin="0,2,0,5"/>
            </DockPanel>
        </Button>

        <StackPanel VerticalAlignment="Center" Grid.Row="3" Margin="8,0,8,0">
            <TextBlock VerticalAlignment="Center" Text="Target Organization:"/>
        </StackPanel>

        <ComboBox Grid.Row="3" Grid.Column="1" Margin="8,4,8,4" 
                  ItemsSource="{Binding CfOrgOptions}" 
                  SelectedItem="{Binding SelectedOrg}"
                  DropDownClosed="CfOrgOptions_ComboBox_DropDownClosed">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding OrgName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel VerticalAlignment="Center" Grid.Row="4" Margin="8,0,8,0">
            <TextBlock VerticalAlignment="Center" Text="Target Space:"/>
        </StackPanel>

        <ComboBox Grid.Row="4" Grid.Column="1" Margin="8,4,8,4" ItemsSource="{Binding CfSpaceOptions}" SelectedItem="{Binding SelectedSpace}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SpaceName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Margin="8,4,8,4">
            <Button Content="Deploy" Width="100" HorizontalAlignment="Right" 
                Command="{ Binding ElementName=DeploymentDialogViewElement, Path=UploadAppCommand }" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
             />
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Margin="8,0,8,0">
            <ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                <TextBox Name="deploymentStatusText" 
                    Text="{Binding  Path=DeploymentStatus}"
                    Padding="5"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    IsReadOnly="True" 
                    TextWrapping="Wrap" 
                    MaxLines="5"
                    TextBoxBase.TextChanged="DeploymentStatus_TextChanged"/>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</Window>